<!-- nav-bar -->
<div class="narbar">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="dropdown">
                    <button class="btn-category" data-toggle="dropdown">
                        <i class="bi bi-list"></i>Danh mục thể loại
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @foreach (var item in ViewBag.CategoryNavList)
                        {
                            <a class="dropdown-item" href="@Url.Action("Index/" + item.CategoryID,"Category")">@item.CategoryName</a>
                        }
                    </div>
                </div>

            </div>

            <div class="col-lg-9">
                <ul class="nav justify-content-center nav-list">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("GetAllProduct","Category")"><i class="bi bi-book"></i>Tất cả sách</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index/" + 1,"Category")"><i class="bi bi-pencil"></i>Khoa học</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index/" + 2,"Category")"><i class="bi bi-balloon"></i>Truyện tranh</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","NewsCategory")"><i class="bi bi-newspaper"></i>Tin tức</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About","Home")"><i class="bi bi-newspaper"></i>Giới thiệu</a>
                    </li>

                </ul>
            </div>
        </div>
    </div>
</div>
<!-- end-nar-bar -->
