@model List<BookStore.Models.News>

<!--new-1-->
<div class="container">
    @foreach (var newsItem in Model)
    {
        <div class="col">
            <div class="col-lg-9">
                <div class="brand">
                    <h5>TIN TỨC NỔI BẬT</h5>
                </div>
                <h1 class="clrTit bld tuht_show" id="article_title">@newsItem.NewsTitle</h1>

                <h5>
                    @newsItem.NewsContent.Substring(0, ViewBag.IndexOfDot)
                </h5>
                <img class="card-img-bottom" src="~/image/@newsItem.NewsImage" alt="card image cap">

                <p>@newsItem.NewsContent.Substring(ViewBag.IndexOfDot + 1)</p>
            </div>
        </div>
    }
</div>
<!--end-new-1-->
